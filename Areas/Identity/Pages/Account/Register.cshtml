@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<style>
    :root {
            --primary: #4361ee;
            --secondary: #3f37c9;
            --success: #4cc9f0;
            --warning: #f72585;
            --light: #f8f9fa;
            --dark: #212529;
            --gray: #6c757d;
            --light-gray: #e9ecef;
        }

        body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    }

    .register-container {
            max-width: 1200px;
			margin: 50px auto;
			padding: 0 20px;
        }
        
        .login-container {
            display: flex;
            width: 100%;
            max-width: 1000px;
            background-color: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }
        
        .login-left {
            flex: 1;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white;
            padding: 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        
        .login-right {
            flex: 1;
            padding: 50px;
        }
        
        .logo {
            display: flex;
            align-items: center;
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 30px;
        }
        
        .logo i {
            margin-right: 10px;
        }
        
        .welcome-text h1 {
            font-size: 2.2rem;
            margin-bottom: 15px;
        }
        
        .welcome-text p {
            font-size: 1.1rem;
            opacity: 0.9;
        }
        
        .features {
            margin-top: 40px;
        }
        
        .feature {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }
        
        .feature i {
            font-size: 1.2rem;
            margin-right: 15px;
            background-color: rgba(255, 255, 255, 0.2);
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .login-form {
            width: 100%;
        }
        
        .form-title {
            font-size: 1.8rem;
            margin-bottom: 30px;
            color: var(--dark);
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
        }
        
        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid var(--light-gray);
            border-radius: 8px;
            font-size: 1rem;
            transition: border-color 0.3s;
        }
        
        .form-control:focus {
            outline: none;
            border-color: var(--primary);
        }

        .form-group {
    margin-bottom: 1.2rem;
    display: flex;
    flex-direction: column;
    gap: 6px;
}

/* Label */
.form-group .form-label {
    font-weight: 600;
    font-size: 0.95rem;
    color: #333;
}

/* Select dropdown */
.form-group select {
    padding: 10px 12px;
    font-size: 0.95rem;
    border: 1px solid #ccc;
    border-radius: 6px;
    background-color: #fff;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
}

/* Hover + Focus */
.form-group select:hover {
    border-color: #888;
}

.form-group select:focus {
    border-color: #4a90e2;
    box-shadow: 0 0 0 3px rgba(74, 144, 226, 0.25);
    outline: none;
}

/* Validation error text */
.text-danger {
    font-size: 0.85rem;
    margin-top: 2px;
    color: #d9534f;
}
        
        .btn {
            padding: 12px 20px;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            font-weight: 500;
            transition: all 0.3s;
            font-size: 1rem;
            width: 100%;
        }
        
        .btn-primary {
            background-color: var(--primary);
            color: white;
        }
        
        .btn-primary:hover {
            background-color: var(--secondary);
        }
        
        .form-footer {
            margin-top: 25px;
            text-align: center;
            color: var(--gray);
        }
        
        .form-footer a {
            color: var(--primary);
            text-decoration: none;
        }
        
        .form-footer a:hover {
            text-decoration: underline;
        }
        
        .role-fields {
            margin-top: 20px;
            padding: 20px;
            background-color: var(--light);
            border-radius: 8px;
            transition: all 0.3s ease;
        }
        
        .role-fields h3 {
            margin-bottom: 15px;
            font-size: 1.2rem;
            color: var(--dark);
        }
        
        .profile-preview {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background-color: var(--light-gray);
            margin: 15px auto;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            border: 2px solid var(--primary);
        }
        
        .profile-preview img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .profile-preview i {
            font-size: 2.5rem;
            color: var(--gray);
        }
        
        @@media (max-width: 768px) {
            .login-container {
                flex-direction: column;
            }
            
            .login-left, .login-right {
                padding: 30px;
            }
        }
</style>

<div class="register-container">
        <div class="login-container">
            <!-- Left Side - Welcome Section -->
            <div class="login-left">
                <div class="logo">
                    <i class="fas fa-tasks"></i>
                    <span>TaskFlow</span>
                </div>
                <div class="welcome-text">
                    <h1>Welcome to TaskFlow</h1>
                    <p>Streamline your projects, collaborate with your team, and achieve more together.</p>
                </div>
                <div class="features">
                    <div class="feature">
                        <i class="fas fa-project-diagram"></i>
                        <div>
                            <h3>Project Management</h3>
                            <p>Organize tasks and track progress</p>
                        </div>
                    </div>
                    <div class="feature">
                        <i class="fas fa-users"></i>
                        <div>
                            <h3>Team Collaboration</h3>
                            <p>Work together seamlessly</p>
                        </div>
                    </div>
                    <div class="feature">
                        <i class="fas fa-chart-line"></i>
                        <div>
                            <h3>Progress Tracking</h3>
                            <p>Monitor your team's performance</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Right Side - Login Form -->
            <div class="login-right">
                <form method="post" class="login-form" id="login-form">
                    <h2 class="form-title">Create Your Account</h2>

                    <div class="form-group">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" type="email" class="form-control" id="email" placeholder="Enter your email">
                        <span asp-validation-for="Input.Email"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Input.Fullname" class="form-label"></label>
                        <input asp-for="Input.Fullname" type="text" class="form-control" id="fullname" placeholder="Enter your full name">
                        <span asp-validation-for="Input.Fullname"></span>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label" asp-for="Input.Role"></label>
                        <select asp-for="Input.Role" asp-items="@Model.Roles" class="form-control" id="role">
                            <option value="">Select your role</option>
                        </select>
                        <span asp-validation-for="Input.Role"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Input.ProfilePictureURL" class="form-label" for="profile-pic"></label>
                        <input asp-for="Input.ProfilePictureURL" class="form-control" id="profile-pic" placeholder="Enter URL for your profile picture">
                        <span asp-validation-for="Input.ProfilePictureURL"></span>
                    </div>
                    
                    <!-- Profile Preview -->
                    <div class="profile-preview" id="profile-preview">
                        <i class="fas fa-user"></i>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" type="password" class="form-control" id="fullname" placeholder="Enter your password">
                        <span asp-validation-for="Input.Password"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control" id="fullname" placeholder="confirm your password">
                        <span asp-validation-for="Input.ConfirmPassword"></span>
                    </div>

                    <div id="manager-fields" class="role-fields" style="display: none;">
                        <h3>Manager Information</h3>

                        <div class="form-group">
                            <label asp-for="Input.Department" class="form-label"></label>
                            <input asp-for="Input.Department" class="form-control" />
                            <span asp-validation-for="Input.Department" class="text-danger"></span>
                        </div>

                    </div>

                    <div id="member-fields" class="role-fields" style="display: none;">
                        <h3>Team Member Information</h3>

                        <div class="form-group">
                            <label asp-for="Input.JobTitle" class="form-label"></label>
                            <input asp-for="Input.JobTitle" class="form-control" />
                            <span asp-validation-for="Input.JobTitle" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.SkillSet" class="form-label"></label>
                            <input asp-for="Input.SkillSet" class="form-control" />
                            <span asp-validation-for="Input.SkillSet" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.MemberExperienceLevelId" class="form-label"></label>
                            <select asp-for="Input.MemberExperienceLevelId" asp-items="@Model.MemberExperienceLevels">
                                <option value="0">Select Member Expreience level</option>
                            </select>
                            <span asp-validation-for="Input.MemberExperienceLevelId" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Create Account</button>
                    
                    <div class="form-footer">
                        <p>Already have an account? <a asp-area="Identity" asp-page="/Account/Login">Sign In</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
document.addEventListener('DOMContentLoaded', function() {
  const roleSelect = document.getElementById('role');
  const managerFields = document.getElementById('manager-fields');
  const memberFields = document.getElementById('member-fields');

  const profilePicInput = document.getElementById('profile-pic');
  const profilePreview = document.getElementById('profile-preview');

  // Handle role selection change
  roleSelect.addEventListener('change', function() {
    const role = this.value;
    console.log("changed");

    // Hide all role-specific sections
    managerFields.style.display = 'none';
    memberFields.style.display = 'none';

    // Show the selected one
    if (role === 'Manager') {
        managerFields.style.display = 'block';
        memberFields.style.display = 'none';
    } else if (role === 'TeamMember') {
        memberFields.style.display = 'block';
        managerFields.style.display = 'none';
    }
  });

  // Handle profile picture URL input
profilePicInput.addEventListener('input', function() {
    const url = this.value;
    if (url) {
      profilePreview.innerHTML = `<img src="${url}" alt="Profile Preview"
        onerror="this.style.display='none'; this.parentElement.innerHTML='<i class=\'fas fa-user\'></i>';" />`;
    } else {
      profilePreview.innerHTML = '<i class="fas fa-user"></i>';
    }
  });
});
</script>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}