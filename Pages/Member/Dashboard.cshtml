<script>
document.addEventListener('DOMContentLoaded', function() {
    // --- Collapse functionality for All Projects ---
    const memberAllProjectsToggle = document.getElementById('member-all-projects-toggle');
    const memberAllProjectsContent = document.getElementById('member-all-projects-content');

    if (memberAllProjectsToggle) {
        memberAllProjectsToggle.addEventListener('click', function() {
            memberAllProjectsContent.classList.toggle('expanded');
            const icon = this.querySelector('i');
            icon.classList.toggle('fa-chevron-down');
            icon.classList.toggle('fa-chevron-up');
        });
    }

    // --- Filter checkbox functionality ---
    const pairs = {
        "member-filter-today": "today-tasks",
        "member-filter-week": "this-week-tasks",
        "member-filter-overdue": "overdue-task",
        "member-filter-upcoming": "upcoming-tasks"
    };

    for (const [checkboxId, sectionId] of Object.entries(pairs)) {
        const checkbox = document.getElementById(checkboxId);
        const section = document.getElementById(sectionId);
        if (!checkbox || !section) continue;

        // initial visibility
        section.style.display = checkbox.checked ? "block" : "none";

        // toggle on change
        checkbox.addEventListener("change", function() {
            section.style.display = this.checked ? "block" : "none";
        });
    }

    // --- Join Project Modal ---
    const joinProjectModal = document.getElementById('join-project-modal');
    const joinProjectBtns = document.querySelectorAll('.join-project-btn');
    const joinProjectTitle = document.getElementById('join-project-title');
    const selectedProjectIdInput = document.getElementById('selected-projectId');

    joinProjectBtns.forEach(btn => {
        btn.addEventListener('click', function() {
            const projectName = this.getAttribute('data-project');
            const projectId = this.getAttribute('data-projectId');

            joinProjectModal.style.display = 'flex';
            joinProjectTitle.textContent = `Join ${projectName}`;
            selectedProjectIdInput.value = projectId;
        });
    });

    // --- Close Modals ---
    const closeModalBtns = document.querySelectorAll('.close-modal');
    closeModalBtns.forEach(btn => {
        btn.addEventListener('click', function() {
            alert(1);
            const modal = this.closest('.modal');
            if (modal) modal.style.display = 'none';
        });
    });

    // close modal when clicking outside
    window.addEventListener('click', function(event) {
        if (event.target.classList.contains('modal')) {
            event.target.style.display = 'none';
        }
    });
});
</script>